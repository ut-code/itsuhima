generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime
  endDate   DateTime
  range     Range[]
  slots     Slot[]
  hosts     Host[]
  guests    Guest[]
}

model Range {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
}

model Slot {
  id      String   @id @default(uuid())
  start   DateTime
  end     DateTime
  eventId String
  event   Event    @relation(fields: [eventId], references: [id])
  guestId String
  guest   Guest    @relation(fields: [guestId], references: [id])
}

model Host {
  id        String @id @default(uuid())
  browserId String @default(uuid())
  eventId   String
  event     Event  @relation(fields: [eventId], references: [id])
}

model Guest {
  id        String @id @default(uuid())
  name      String
  browserId String @default(uuid())
  eventId   String
  event     Event  @relation(fields: [eventId], references: [id])
  slots     Slot[]
}
