generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id            String         @id @default(uuid())
  name          String
  startDate     DateTime
  endDate       DateTime
  allowedRanges AllowedRange[]
  slots         Slot[]
  hosts         Host[]
  guests        Guest[]
}

model AllowedRange {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
}

model Slot {
  id        String   @id @default(uuid())
  from      DateTime
  to        DateTime
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  guestId   String
  guest     Guest    @relation(fields: [guestId], references: [id])
}

model Host {
  id        String  @id @default(uuid())
  browserId String  @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  @@unique([browserId, projectId])
}

model Guest {
  id        String  @id @default(uuid())
  name      String
  browserId String  @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  slots     Slot[]

  @@unique([browserId, projectId])
}
